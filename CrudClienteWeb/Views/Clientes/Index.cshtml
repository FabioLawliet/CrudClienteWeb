@model IEnumerable<CrudClienteWeb.Models.DbCliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Clientes</h1>
<p class="pull-right">
    <a asp-action="Create" class="btn btn-success">Cadastrar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="col-md-4">
                Nome
            </th>
            <th class="col-md-2">
                CPF/CNPJ
            </th>
            <th class="col-md-2">
                RG/IE
            </th>
            <th class="col-md-1">
                Ativo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cpfcnpj)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rgie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ativo)
            </td>
            <td>
                <div class="row pull-right formBotoes">
                    <div class="col-md-12">
                        <a asp-action="Edit"    class="btn btn-primary btn-sm" asp-route-id="@item.id">Editar</a> 
                        <a asp-action="Details" class="btn btn-primary btn-sm" asp-route-id="@item.id">Detalhes</a> 
                        <a asp-action="Delete"  class="btn btn-danger btn-sm"  asp-route-id="@item.id">Deletar</a>
                    </div>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
